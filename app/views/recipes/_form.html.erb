<%= form_with model: recipe, url: user_recipes_path, method: :post, class: "login-container" do |form| %>
  <% if recipe.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
        <% recipe.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="new-field">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class: "input", placeholder: "Ramen" %>
  </div>

  <div class="new-field">
    <%= form.label :preparation_time, style: "display: block" %>
    <%= form.number_field :preparation_time, class: "input", placeholder: "0" %>
  </div>

  <div class="new-field">
    <%= form.label :cooking_time, style: "display: block" %>
    <%= form.number_field :cooking_time, class: "input", placeholder: "0" %>
  </div>

  <div class="new-field">
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description, class: "input", placeholder: "Cook noodles for 2 minutes" %>
  </div>

  <div class="new-field">
    <%= form.label :public %>
    <%= form.check_box :public %>
  </div>

  <div>
    <%= form.submit class: "login-button" %>
  </div>
<% end %>
