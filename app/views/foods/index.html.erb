<section id="public-recipes-list">
  <p style="color: green"><%= notice %></p>

  <%= link_to "New food", new_user_food_url %>

  <% if @foods.empty? %>
    <p> Your food list is empty.</p>
  <% else %>
    <table id="food-list">
      <tr>
        <th>Food</th>
        <th>Measurement unit</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Actions</th>
      </tr>
        <% @foods.each do |food| %>
          <%= render food %>
        <% end %>
    </table>
  <% end %>
</section>
